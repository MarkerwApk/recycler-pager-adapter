<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/mdListItemHeight"
  android:background="?attr/selectableItemBackground"
  android:paddingLeft="@dimen/mdLayoutSpacing"
  android:paddingRight="@dimen/mdLayoutSpacing">

  <TextView
    android:id="@+id/title"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/description"
    android:paddingLeft="@dimen/mdLayoutSpacing_sm"
    tools:text="Buy me a coffee"
    style="@style/MdText.Subhead1.SingleLine" />

  <TextView
    android:id="@+id/description"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:paddingRight="@dimen/mdLayoutSpacing_sm"
    tools:text="$0.99"
    style="@style/MdText.Body1.SingleLine" />
</RelativeLayout>